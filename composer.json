{
    "name": "inphest/framework",
    "type": "library",
    "license": "The Unlicense",
    "authors": [
        {
            "name": "Joe Haines",
            "email": "hello@joehaines.co.uk"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Inphest\\": "src/"
        },
        "files": ["src/test.php", "src/version.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Inphest\\MetaTests\\": "meta-tests/",
            "Inphest\\Tests\\": "tests/",
            "Example\\": "example/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.1",
        "vimeo/psalm": "^3.18.2",
        "symplify/easy-coding-standard": "^9.4.22",
        "psalm/plugin-phpunit": "^0.12.2"
    },
    "scripts": {
        "test": [
            "@test:lint",
            "@test:psalm",
            "@test:unit",
            "@test:meta"
        ],
        "test:meta": "./bin/inphest meta-tests",
        "test:unit": "phpunit --testdox --colors=always",
        "test:lint": "ecs check --ansi",
        "test:psalm": "psalm"
    }
}
